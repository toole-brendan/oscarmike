NODE_ENV=production

# PostgreSQL database connection
# Use a hosted database service for production
DATABASE_URL=postgres://user:password@your-production-db-host.com:5432/oscarmike

# JWT configuration
# Use a strong, randomly generated secret in production
JWT_SECRET=your-production-secret-key-should-be-very-long-and-random
JWT_EXPIRES_IN=24h

# Redis configuration for caching
REDIS_URL=redis://your-redis-host.com:6379
CACHE_TTL=300 # 5 minutes in seconds
DISABLE_CACHE=false

# Log level
LOG_LEVEL=info

# Rate limiting
# Adjust based on expected load
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=20
HEAVY_OP_RATE_LIMIT_MAX=10 